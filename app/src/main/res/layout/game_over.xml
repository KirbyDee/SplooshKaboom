<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_over"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".view.activities.GameOverActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <Button
            android:id="@+id/gameOverContinue"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/game_over_button"
            android:text="Continue"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:clickable="false"/>

        <Button
            android:id="@+id/gameOverQuit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/game_over_button"
            android:layout_below="@id/gameOverContinue"
            android:text="Quit"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:clickable="false"/>

    </RelativeLayout>

</LinearLayout>