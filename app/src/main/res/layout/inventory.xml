<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.InventoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inventory_selector"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/inventory_divider"
        app:layout_constraintHorizontal_weight="20"
        android:background="#22361d">

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView
            android:id="@+id/inventory_item_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/inventory_item_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemIndex="1"
            android:background="@drawable/inventory_item_deselected">

            <com.kirbydee.splooshkaboom.view.layoutviews.inventory.GifInventoryItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                app:itemResource="heart_piece_anim"
                app:itemIndex="1" />

        </com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView>

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView
            android:id="@+id/inventory_item_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/inventory_item_1"
            app:layout_constraintBottom_toTopOf="@+id/inventory_item_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemIndex="2"
            android:background="@drawable/inventory_item_deselected">

            <com.kirbydee.splooshkaboom.view.layoutviews.inventory.StaticInventoryItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                app:itemResource="treasure_map"
                app:itemIndex="2" />

        </com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView>

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView
            android:id="@+id/inventory_item_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@+id/inventory_item_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:itemIndex="3"
            android:background="@drawable/inventory_item_deselected">

            <com.kirbydee.splooshkaboom.view.layoutviews.inventory.GifInventoryItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                app:itemResource="triforce_anim"
                app:itemIndex="3" />

        </com.kirbydee.splooshkaboom.view.layoutviews.inventory.InventoryView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/inventory_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inventory_selector"
        app:layout_constraintRight_toLeftOf="@+id/inventory_display" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inventory_display"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/inventory_divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="80">

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.display.InventoryDisplayBackgroundView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            android:alpha="0.6"/>

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.display.TreasureView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:background="@drawable/treasure_map_open" />

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.display.HeartPieceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:fontFamily="@font/windwaker_font"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="24sp"
            android:text="@string/inventory_text_heart_piece" />

        <com.kirbydee.splooshkaboom.view.layoutviews.inventory.display.TriforceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:fontFamily="@font/windwaker_font"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/inventory_text_triforce" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>