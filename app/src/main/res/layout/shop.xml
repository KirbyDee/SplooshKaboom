<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/shopScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <VideoView
        android:id="@+id/shopVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:weightSum="100">

            <com.kirbydee.splooshkaboom.view.layoutviews.gifs.GifView
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/rupee_green_anim"/>

            <com.kirbydee.splooshkaboom.view.layoutviews.counter.RupeesView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginStart="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="0"
                android:fontFamily="@font/comic_sans_ms"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:orientation="horizontal"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="45" />

            <com.kirbydee.splooshkaboom.view.layoutviews.shopitem.GifShopItemView
                android:id="@+id/heart_piece"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:itemResource="heart_piece_anim" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7" />

            <com.kirbydee.splooshkaboom.view.layoutviews.shopitem.StaticShopItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:adjustViewBounds="true"
                app:itemResource="treasure_map" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <com.kirbydee.splooshkaboom.view.layoutviews.shopitem.StaticShopItemView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:itemResource="question_mark" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_box"
                android:layout_weight="80">

                <com.kirbydee.splooshkaboom.view.layoutviews.TextBox
                    android:id="@+id/shopTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/comic_sans_ms"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_margin="30dp"/>

                <com.kirbydee.splooshkaboom.view.layoutviews.TextBoxNext
                    android:id="@+id/shopTextNext"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/text_next"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>